---
import BaseLayout from "./BaseLayout.astro";

interface Props {
  pageTitle: string;
}

const { pageTitle } = Astro.props;
---

<BaseLayout pageTitle={pageTitle}>
  <article class="container mx-auto px-4 pb-16">
    <slot />
  </article>
</BaseLayout>

<style is:global>
  /* Blog Content Styling */
  .blog-content {
    font-size: 1.125rem;
    line-height: 1.8;
    color: #374151;
  }

  /* Paragraphs */
  .blog-content p {
    margin-bottom: 1.75rem;
    line-height: 1.8;
    color: #4b5563;
  }

  .blog-content p:last-child {
    margin-bottom: 0;
  }

  /* Headings */
  .blog-content h1,
  .blog-content h2,
  .blog-content h3,
  .blog-content h4,
  .blog-content h5,
  .blog-content h6 {
    font-weight: 700;
    color: #111827;
    line-height: 1.3;
    margin-top: 3rem;
    margin-bottom: 1.5rem;
  }

  .blog-content h1 {
    font-size: 2.25rem;
    margin-top: 0;
  }

  .blog-content h2 {
    font-size: 2rem;
    margin-top: 3.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid #e5e7eb;
  }

  .blog-content h3 {
    font-size: 1.75rem;
    margin-top: 2.5rem;
  }

  .blog-content h4 {
    font-size: 1.5rem;
    margin-top: 2rem;
  }

  .blog-content h5 {
    font-size: 1.25rem;
  }

  .blog-content h6 {
    font-size: 1.125rem;
  }

  /* Links */
  .blog-content a {
    color: #10b981;
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: all 0.2s ease;
  }

  .blog-content a:hover {
    color: #059669;
    border-bottom-color: #059669;
  }

  /* Strong and Bold */
  .blog-content strong,
  .blog-content b {
    font-weight: 700;
    color: #111827;
  }

  /* Emphasis */
  .blog-content em,
  .blog-content i {
    font-style: italic;
  }

  /* Unordered Lists */
  .blog-content ul {
    list-style-type: disc;
    margin: 1.75rem 0;
    padding-left: 2rem;
  }

  .blog-content ul li {
    margin: 0.75rem 0;
    padding-left: 0.5rem;
    line-height: 1.8;
  }

  .blog-content ul li::marker {
    color: #10b981;
    font-size: 1.2em;
  }

  /* Nested Lists */
  .blog-content ul ul,
  .blog-content ol ul {
    margin: 0.5rem 0;
    padding-left: 1.5rem;
  }

  .blog-content ul ul {
    list-style-type: circle;
  }

  .blog-content ul ul ul {
    list-style-type: square;
  }

  /* Ordered Lists */
  .blog-content ol {
    list-style-type: decimal;
    margin: 1.75rem 0;
    padding-left: 2rem;
  }

  .blog-content ol li {
    margin: 0.75rem 0;
    padding-left: 0.5rem;
    line-height: 1.8;
  }

  .blog-content ol li::marker {
    color: #10b981;
    font-weight: 700;
  }

  .blog-content ol ol {
    list-style-type: lower-alpha;
    margin: 0.5rem 0;
    padding-left: 1.5rem;
  }

  .blog-content ol ol ol {
    list-style-type: lower-roman;
  }

  /* Blockquotes */
  .blog-content blockquote {
    border-left: 4px solid #10b981;
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: #6b7280;
    background-color: #f9fafb;
    padding: 1.5rem;
    border-radius: 0.5rem;
  }

  .blog-content blockquote p {
    margin-bottom: 0.75rem;
  }

  .blog-content blockquote p:last-child {
    margin-bottom: 0;
  }

  /* Code */
  .blog-content code {
    background-color: #f3f4f6;
    padding: 0.25rem 0.5rem;
    border-radius: 0.375rem;
    font-family: 'Monaco', 'Courier New', monospace;
    font-size: 0.9em;
    color: #ec4899;
  }

  /* Code Blocks */
  .blog-content pre {
    background-color: #1f2937;
    color: #f3f4f6;
    padding: 1.5rem;
    border-radius: 0.75rem;
    overflow-x: auto;
    margin: 2rem 0;
    line-height: 1.6;
  }

  .blog-content pre code {
    background-color: transparent;
    padding: 0;
    border-radius: 0;
    color: inherit;
    font-size: 0.9rem;
  }

  /* Horizontal Rule */
  .blog-content hr {
    border: none;
    border-top: 2px solid #e5e7eb;
    margin: 3rem 0;
  }

  /* Images */
  .blog-content img {
    max-width: 100%;
    height: auto;
    border-radius: 0.75rem;
    margin: 2rem 0;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }

  /* Tables */
  .blog-content table {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
  }

  .blog-content table th,
  .blog-content table td {
    padding: 0.75rem 1rem;
    border: 1px solid #e5e7eb;
    text-align: left;
  }

  .blog-content table th {
    background-color: #f9fafb;
    font-weight: 700;
    color: #111827;
  }

  .blog-content table tr:nth-child(even) {
    background-color: #f9fafb;
  }

  /* Task Lists */
  .blog-content input[type="checkbox"] {
    margin-right: 0.5rem;
  }

  /* Inline elements spacing */
  .blog-content p + h2,
  .blog-content p + h3,
  .blog-content p + h4 {
    margin-top: 2.5rem;
  }

  .blog-content ul + h2,
  .blog-content ol + h2,
  .blog-content ul + h3,
  .blog-content ol + h3 {
    margin-top: 3rem;
  }

  /* First paragraph after heading */
  .blog-content h2 + p,
  .blog-content h3 + p,
  .blog-content h4 + p {
    margin-top: 1rem;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .blog-content {
      font-size: 1rem;
    }

    .blog-content h1 {
      font-size: 1.875rem;
    }

    .blog-content h2 {
      font-size: 1.625rem;
    }

    .blog-content h3 {
      font-size: 1.375rem;
    }

    .blog-content h4 {
      font-size: 1.25rem;
    }

    .blog-content ul,
    .blog-content ol {
      padding-left: 1.5rem;
    }
  }
</style>