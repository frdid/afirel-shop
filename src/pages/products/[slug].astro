---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

interface Product {
  id: string;
  name: string;
  description: string;
  price: number;
  images: { url: string; alt: string }[];
  badge?: string;
  originalPrice?: number;
  amazonLink?: string;
}

interface Props {
  product: Product;
}

export async function getStaticPaths() {
  const products = await getCollection("products");
  return products.map((product: Product) => ({
    params: { slug: product.id },
    props: { product },
  }));
}

const { product } = Astro.props;
const { data } = product;
---

<BaseLayout pageTitle={data.name}>
  <div class="container mx-auto px-4 py-8">
    <!-- Breadcrumb -->
    <nav class="mb-8">
      <ol class="flex items-center space-x-2 text-sm text-gray-500">
        <li><a href="/" class="hover:text-green-600">Home</a></li>
        <li><span class="mx-2">/</span></li>
        <li><a href="/products" class="hover:text-green-600">Products</a></li>
        <li><span class="mx-2">/</span></li>
        <li class="text-gray-800 font-medium">{data.name}</li>
      </ol>
    </nav>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 mb-16">
      <!-- Product Images -->
      <div class="space-y-4">
        <!-- Main Image -->
        <div class="relative bg-gray-50 rounded-xl overflow-hidden">
          <img
            id="mainImage"
            src={data.images[0].url}
            alt={data.images[0].alt}
            class="w-full h-96 lg:h-[500px] object-contain"
          />

          {
            data.badge && (
              <span class="absolute top-4 left-4 bg-green-500 text-white px-3 py-1 rounded-full text-sm font-semibold">
                {data.badge}
              </span>
            )
          }

          {
            data.originalPrice && (
              <span class="absolute top-4 right-4 bg-red-500 text-white px-2 py-1 rounded text-sm font-semibold">
                SALE
              </span>
            )
          }

          {
            !data.inStock && (
              <div class="absolute inset-0 bg-black bg-opacity-50 flex items-center justify-center">
                <span class="bg-white text-gray-800 px-6 py-3 rounded-lg text-xl font-semibold">
                  Out of Stock
                </span>
              </div>
            )
          }

          <!-- Navigation Arrows -->
          {
            data.images.length > 1 && (
              <>
                <button
                  id="prevImage"
                  class="absolute cursor-pointer left-4 top-1/2 transform -translate-y-1/2 bg-white opacity-70 hover:opacity-100 p-2 rounded-full shadow-lg transition-all duration-200"
                >
                  <svg
                    class="h-6 w-6 text-gray-800"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M15 19l-7-7 7-7"
                    />
                  </svg>
                </button>
                <button
                  id="nextImage"
                  class="absolute cursor-pointer right-4 top-1/2 transform -translate-y-1/2 bg-gray-50 opacity-70 hover:opacity-100 p-2 rounded-full shadow-lg transition-all duration-200"
                >
                  <svg
                    class="h-6 w-6 text-gray-800"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 5l7 7-7 7"
                    />
                  </svg>
                </button>
              </>
            )
          }
        </div>

        <!-- Thumbnail Images -->
        {
          data.images.length > 1 && (
            <div class="flex space-x-2 overflow-x-auto pb-2">
              {data.images.map((image, index) => (
                <button
                  class={`thumbnail flex-shrink-0 w-20 h-20 rounded-lg overflow-hidden border-2 transition-all duration-200 cursor-pointer ${
                    index === 0
                      ? "border-green-500"
                      : "border-gray-200 hover:border-gray-300"
                  }`}
                  data-index={index}
                >
                  <img
                    src={image.url}
                    alt={image.alt}
                    class="w-full h-full object-cover hover:scale-110 transition-transform duration-200 saturate-50 hover:saturate-150"
                  />
                </button>
              ))}
            </div>
          )
        }
      </div>

      <!-- Product Details -->
      <div class="space-y-6">
        <!-- Brand -->
        <p class="text-sm text-gray-500 font-medium uppercase tracking-wide">
          {data.brand}
        </p>

        <!-- Product Name -->
        <h1 class="text-3xl lg:text-4xl font-bold text-gray-900">
          {data.name}
        </h1>

        <!-- Rating -->
        {
          data.rating && (
            <div class="flex items-center space-x-2">
              <div class="flex text-yellow-400">
                {Array.from({ length: 5 }, (_, i) => (
                  <svg
                    class={`h-5 w-5 ${i < Math.floor(data.rating) ? "fill-current" : "text-gray-300"}`}
                    viewBox="0 0 20 20"
                  >
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
              </div>
              <span class="text-lg font-medium text-gray-900">
                {data.rating}
              </span>
              <span class="text-gray-500">({data.reviewCount} reviews)</span>
            </div>
          )
        }

        <!-- Price -->
        <div class="space-y-2">
          <div class="flex items-center space-x-4">
            <span class="text-3xl font-bold text-green-600">
              ${data.price.toFixed(2)}
            </span>
            {
              data.originalPrice && (
                <>
                  <span class="text-xl text-gray-500 line-through">
                    ${data.originalPrice.toFixed(2)}
                  </span>
                  <span class="bg-red-100 text-red-800 text-sm font-semibold px-2 py-1 rounded">
                    Save ${(data.originalPrice - data.price).toFixed(2)}
                  </span>
                </>
              )
            }
          </div>
          {
            data.originalPrice && (
              <p class="text-sm text-green-600 font-medium">
                {Math.round(
                  ((data.originalPrice - data.price) / data.originalPrice) *
                    100,
                )}
                % off
              </p>
            )
          }
          <p class="text-gray-500 text-sm">Prices may change over time. Please check the latest price on Amazon.</p>
        </div>

        <!-- Description -->
        <div class="prose prose-gray">
          <p class="text-gray-700 leading-relaxed">{data.description}</p>
        </div>

        <!-- Quantity Selector and Add to Cart -->
        <div class="space-y-4">

          <div class="flex space-x-4">
            <a href={data.amazonLink} target="blank" class="flex-1 py-4 px-6 rounded-lg font-semibold text-lg transition-colors duration-200 bg-green-600 text-gray-50 hover:bg-green-700 text-center cursor-pointer">
              View on Amazon
              <!-- <button
                id="addToCart"
                class={`flex-1 py-4 px-6 rounded-lg font-semibold text-lg transition-colors duration-200 ${
                  data.inStock
                    ? "bg-green-600 text-white hover:bg-green-700"
                    : "bg-gray-300 text-gray-500 cursor-not-allowed"
                }`}
                disabled={!data.inStock}
              >
                {data.inStock ? "View on Amazon" : "Out of Stock"}
              </button> -->
            </a>

            <!-- <button
              class="px-6 py-4 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors duration-200"
              title="Add to Wishlist"
            >
              <svg
                class="h-6 w-6 text-gray-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
                ></path>
              </svg>
            </button> -->
          </div>
        </div>

        <!-- Tags -->
        {
          data.tags && data.tags.length > 0 && (
            <div class="flex flex-wrap gap-2">
              {data.tags.map((tag: string) => (
                <span class="bg-gray-100 text-gray-700 px-3 py-1 rounded-full text-sm">
                  #{tag}
                </span>
              ))}
            </div>
          )
        }
      </div>
    </div>

    <!-- Product Specifications -->
    {
      data.specifications && Object.keys(data.specifications).length > 0 && (
        <div class="mb-16">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Specifications</h2>
          <div class="bg-gray-50 rounded-xl p-6">
            <dl class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
              {Object.entries(data.specifications).map(([key, value]) => (
                <div class="border-b border-gray-200 pb-2">
                  <dt class="text-sm font-medium text-gray-500">{key}</dt>
                  <dd class="text-base text-gray-900 mt-1">{value}</dd>
                </div>
              ))}
            </dl>
          </div>
        </div>
      )
    }

    <!-- Back to Products -->
    <div class="text-center">
      <a
        href="/products"
        class="inline-flex items-center bg-gray-100 text-gray-700 px-6 py-3 rounded-lg hover:bg-gray-200 transition-colors duration-200"
      >
        <svg
          class="h-5 w-5 mr-2"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to Products
      </a>
    </div>
  </div>
</BaseLayout>

<script>
  // Image carousel functionality
  const mainImage = document.getElementById("mainImage");
  const thumbnails = document.querySelectorAll(".thumbnail");
  const prevButton = document.getElementById("prevImage");
  const nextButton = document.getElementById("nextImage");

  let currentImageIndex = 0;
  const images = Array.from(thumbnails).map((thumb) => ({
    url: thumb.querySelector("img").src,
    alt: thumb.querySelector("img").alt,
  }));

  function updateMainImage(index) {
    if (images[index]) {
      mainImage.src = images[index].url;
      mainImage.alt = images[index].alt;
      currentImageIndex = index;

      // Update thumbnail active states
      thumbnails.forEach((thumb, i) => {
        if (i === index) {
          thumb.classList.remove("border-gray-200");
          thumb.classList.add("border-green-500");
        } else {
          thumb.classList.remove("border-green-500");
          thumb.classList.add("border-gray-200");
        }
      });
    }
  }

  // Thumbnail click handlers
  thumbnails.forEach((thumbnail, index) => {
    thumbnail.addEventListener("click", () => {
      updateMainImage(index);
    });
  });

  // Navigation button handlers
  if (prevButton) {
    prevButton.addEventListener("click", () => {
      const newIndex =
        currentImageIndex > 0 ? currentImageIndex - 1 : images.length - 1;
      updateMainImage(newIndex);
    });
  }

  if (nextButton) {
    nextButton.addEventListener("click", () => {
      const newIndex =
        currentImageIndex < images.length - 1 ? currentImageIndex + 1 : 0;
      updateMainImage(newIndex);
    });
  }

  // Quantity controls
  const quantityInput = document.getElementById("quantity");
  const decreaseBtn = document.getElementById("decreaseQty");
  const increaseBtn = document.getElementById("increaseQty");

  decreaseBtn?.addEventListener("click", () => {
    const currentValue = parseInt(quantityInput.value);
    if (currentValue > 1) {
      quantityInput.value = currentValue - 1;
    }
  });

  increaseBtn?.addEventListener("click", () => {
    const currentValue = parseInt(quantityInput.value);
    const maxValue = parseInt(quantityInput.max);
    if (currentValue < maxValue) {
      quantityInput.value = currentValue + 1;
    }
  });

  // Add to cart functionality
  const addToCartBtn = document.getElementById("addToCart");
  addToCartBtn?.addEventListener("click", () => {
    const quantity = parseInt(quantityInput.value);
    // Here you would typically add the product to cart
    // For now, just show a success message
    const originalText = addToCartBtn.textContent;
    addToCartBtn.textContent = "Added to Cart!";
    addToCartBtn.classList.add("bg-green-700");

    setTimeout(() => {
      addToCartBtn.textContent = originalText;
      addToCartBtn.classList.remove("bg-green-700");
    }, 2000);
  });

  // Keyboard navigation for image carousel
  document.addEventListener("keydown", (e) => {
    if (e.key === "ArrowLeft" && prevButton) {
      prevButton.click();
    } else if (e.key === "ArrowRight" && nextButton) {
      nextButton.click();
    }
  });
</script>
