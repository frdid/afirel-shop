---
interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<div class="text-center mb-12">
  <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">{title}</h2>
  {subtitle && (
    <p class="text-gray-600 max-w-2xl mx-auto">{subtitle}</p>
  )}
</div>