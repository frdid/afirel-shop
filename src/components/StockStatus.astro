---
const { data } = Astro.props;
---

<!-- Stock Status -->
<div class="flex items-center space-x-2">
  <div
    class={`w-3 h-3 rounded-full ${data.inStock ? "bg-green-500" : "bg-red-500"}`}
  >
  </div>
  <span
    class={`font-medium ${data.inStock ? "text-green-600" : "text-red-600"}`}
  >
    {data.inStock ? "In Stock" : "Out of Stock"}
  </span>
</div>
