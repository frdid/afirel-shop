---
interface RelatedPost {
  slug: string;
  data: {
    title: string;
    description: string;
    category: string;
    publishDate: Date;
    readTime: string;
    image: {
      url: string;
      alt: string;
    };
  };
}

interface Props {
  posts: RelatedPost[];
}

const { posts } = Astro.props;
---

{posts.length > 0 && (
  <section class="bg-gray-50 py-16 px-4">
    <div class="container mx-auto max-w-6xl">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Related Articles</h2>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {posts.map((post) => (
          <article class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
            <a href={`/afirel-shop/blogs/${post.slug}`}>
              <img
                src={post.data.image.url}
                alt={post.data.image.alt}
                class="w-full h-48 object-cover"
              />
            </a>

            <div class="p-6">
              <div class="flex items-center gap-3 mb-3 text-sm text-gray-500">
                <span class="bg-gray-100 text-gray-700 px-2 py-1 rounded text-xs">{post.data.category}</span>
                <time>{new Date(post.data.publishDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}</time>
              </div>

              <h3 class="text-lg font-semibold text-gray-800 mb-2 hover:text-green-600 transition-colors duration-200 line-clamp-2">
                <a href={`/afirel-shop/blogs/${post.slug}`}>{post.data.title}</a>
              </h3>

              <p class="text-gray-600 text-sm mb-4 line-clamp-2">{post.data.description}</p>

              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-500">{post.data.readTime}</span>
                <a
                  href={`/afirel-shop/blogs/${post.slug}`}
                  class="text-green-600 font-medium text-sm hover:text-green-700 transition-colors duration-200"
                >
                  Read More â†’
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>
)}

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
