---
interface Props {
  text?: string;
  href?: string;
}

const { text = "Back to All Posts", href = "/afirel-shop/blogs" } = Astro.props;
---

<div class="container mx-auto px-4 py-12 text-center">
  <a
    href={href}
    class="inline-flex items-center bg-gray-100 text-gray-700 px-6 py-3 rounded-lg hover:bg-gray-200 transition-colors duration-200"
  >
    <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    {text}
  </a>
</div>
