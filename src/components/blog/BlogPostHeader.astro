---
interface Props {
  title: string;
  category: string;
  featured?: boolean;
  author: string;
  publishDate: Date;
  readTime: string;
  image: {
    url: string;
    alt: string;
  };
  description: string;
  tags?: string[];
}

const { title, category, featured, author, publishDate, readTime, image, description, tags } = Astro.props;
---

<header class="max-w-4xl mx-auto mb-12">
  <!-- Category Badge -->
  <div class="flex items-center justify-center mb-6">
    <span class="bg-green-100 text-green-800 px-4 py-2 rounded-full text-sm font-semibold">
      {category}
    </span>
    {featured && (
      <span class="ml-2 bg-yellow-100 text-yellow-800 px-4 py-2 rounded-full text-sm font-semibold">
        Featured
      </span>
    )}
  </div>

  <!-- Title -->
  <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6 text-center">
    {title}
  </h1>

  <!-- Meta Information -->
  <div class="flex flex-wrap items-center justify-center gap-4 text-gray-600 mb-8">
    <div class="flex items-center">
      <svg class="h-5 w-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
      </svg>
      <span>By {author}</span>
    </div>

    <span class="text-gray-400">•</span>

    <div class="flex items-center">
      <svg class="h-5 w-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
      </svg>
      <time>{new Date(publishDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
    </div>

    <span class="text-gray-400">•</span>

    <div class="flex items-center">
      <svg class="h-5 w-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      <span>{readTime}</span>
    </div>
  </div>

  <!-- Featured Image -->
  <div class="rounded-xl overflow-hidden shadow-2xl mb-8">
    <img
      src={image.url}
      alt={image.alt}
      class="w-full h-64 md:h-96 object-cover"
    />
  </div>

  <!-- Description -->
  <p class="text-xl text-gray-600 text-center leading-relaxed">
    {description}
  </p>

  <!-- Tags -->
  {tags && tags.length > 0 && (
    <div class="flex flex-wrap justify-center gap-2 mt-8">
      {tags.map(tag => (
        <span class="bg-gray-100 text-gray-700 px-3 py-1 rounded-full text-sm">
          #{tag}
        </span>
      ))}
    </div>
  )}
</header>