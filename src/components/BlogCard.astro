---
interface Props {
  blog: {
    slug: string;
    data: {
      title: string;
      description: string;
      author: string;
      publishDate: Date;
      category: string;
      readTime: string;
      image: {
        url: string;
        alt: string;
      };
      featured?: boolean;
    };
  };
}

const { blog } = Astro.props;
---

<article class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
  <div class="relative">
    <a href={`/afirel-shop/blogs/${blog.slug}`}>
      <img
        src={blog.data.image.url}
        alt={blog.data.image.alt}
        class="w-full h-48 object-cover"
      />
    </a>
    <div class="absolute bottom-4 left-4">
      <span class="bg-white bg-opacity-90 text-gray-800 px-3 py-1 rounded-full text-sm font-medium">
        {blog.data.readTime}
      </span>
    </div>
    {blog.data.featured && (
      <div class="absolute top-4 right-4">
        <span class="bg-blue-500 text-white px-2 py-1 rounded-full text-xs font-semibold">
          Featured
        </span>
      </div>
    )}
  </div>
  <div class="p-6">
    <div class="flex items-center gap-3 mb-3 text-sm text-gray-500">
      <span class="bg-gray-100 text-gray-700 px-2 py-1 rounded text-xs">{blog.data.category}</span>
      <time>{new Date(blog.data.publishDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}</time>
    </div>
    <h3 class="text-xl font-semibold text-gray-800 mb-3 hover:text-green-600 transition-colors duration-200">
      <a href={`/afirel-shop/blogs/${blog.slug}`}>{blog.data.title}</a>
    </h3>
    <p class="text-gray-600 mb-4 line-clamp-3">{blog.data.description}</p>
    <div class="flex items-center justify-between">
      <div class="text-sm text-gray-500">
        By {blog.data.author}
      </div>
      <a
        href={`/afirel-shop/blogs/${blog.slug}`}
        class="inline-flex items-center text-green-600 font-semibold hover:text-green-700 transition-colors duration-200"
      >
        Read More
        <svg class="ml-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
        </svg>
      </a>
    </div>
  </div>
</article>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
